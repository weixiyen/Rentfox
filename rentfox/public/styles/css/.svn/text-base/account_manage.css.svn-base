/* =layout
----------------------------------------------- */
#accountManage {
	overflow: hidden;
	}
#accountManage > .left {
	float: left;
	width: 620px;
	margin: 20px 0 40px 0;
	}
#accountManage > .right {
	margin-left: 620px;
	margin: 20px 0 40px 0;
	border-left: 1px solid #ccc;
	overflow: hidden;
	}
#accountManage a {
	cursor: pointer;
	}

/* =left
----------------------------------------------- */
#accountManage > .left > .wrap {
	padding: 0 50px 0 15px;
	}
#accountManage > .left .row {
	padding: 10px 0 3px 0;
	border-bottom: 1px solid #ddd;
	overflow: hidden;
	font: 12px Verdana;
	}
#accountManage > .left .row > label {
	float: left;
	width: 120px;
	font-weight: bold;
	color: #666;
	}
#accountManage > .left .row a.link {
	color: #0c3f84;
	text-decoration: underline;
	}
#accountManage > .left .row a.deleteAccount {
	color: red;
	text-decoration: underline;
	}
#accountManage > .left .row.last {
	border: 0;
	}
#accountManage > .left .row .item {
	float: left;
	}
#accountManage > .left .row .item > span:hover {
	background: yellow;
	cursor: pointer;
	}
#accountManage > .left .row .item .picViewer {
	display: none;
	}
#accountManage > .left .row .item .mini.button {
	float: right;
	margin-right: 5px;
	}
#accountManage > .left .row .item .mini.button span {
	padding-left: 10px;
	}
#accountManage > .left .row .item input {
	margin-right: 5px;
	}
#accountManage > .left .row .item input.small {
	width: 100px;
	}

/* =right
----------------------------------------------- */
#accountManage > .right .sect {
	padding: 0 0 20px 0;
	border-bottom: 1px solid #ccc;
	overflow: hidden;
	margin: 0 0 10px 20px;
	}
#accountManage > .right .sect.last {
	border: 0;
	}
#accountManage > .right h3 {
	font: bold 13px Verdana;
	margin: 0 0 10px 0;
	}
#accountManage > .right p {
	line-height: 1.7em;
	padding: 0 0 10px 0;
	}
#accountManage > .right .sect a {
	float: left;
	clear: both;
	color: #0c3f84;
	display: block;
	margin: 0 0 5px 0;
	}